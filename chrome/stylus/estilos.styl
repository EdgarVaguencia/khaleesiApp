@import url('http://fonts.googleapis.com/css?family=Noto+Sans')

shadow =
	box-shadow 0 0 4px rgba(0,0,0,.14), 0 4px 8px rgba(0,0,0,.28)

body
	background #ECECEC
	color #000000
	font-family 'Noto Sans', sans-serif
	font-size 14px
	margin 0
	min-width 350px
	padding 0

header
	{shadow}
	background #3F51B5
	color #FFFFFF
	font-size 16px
	left 0
	position fixed
	top 0
	width 100%
	nav
		margin auto
		padding 10px
		width 90%
	a
		color #FFFFFF
		line-height 24px
		text-decoration none
	.actionMenu
		float	right

.login
	margin-bottom 8px
	div
		padding 8px

.placeHeader
	height	50px

.btn
	background #427FED
	color #FFFFFF
	cursor pointer
	display block
	line-height 36px
	text-align center

#apikey
	background transparent
	border none
	border-bottom 1px solid #ccc
	box-shadow none
	line-height 26px
	margin 20px 15px
	width 100%
	&.success
		color : green

#body
	margin auto
	padding 0 8px
	width 95%
	.task
		{shadow}
		background #FFFFFF
		border-radius 3px
		display flex
		flex-flow row wrap
		margin-bottom 8px
		position relative
			span
				vertical-align middle
		.detail
			flex 1 50%
			padding 16px 8px 16px 16px
			.title
				display block
			.subtitle
				color rgba(0,0,0,.54)
				font-size 12px
		.timer
			color #333
			flex 2 20%
			font-size 30px
			line-height 70px
			order 1
			text-align center
			padding 0 16px 0 8px
		.action
			border-top 1px solid rgba(0,0,0,.12)
			flex 1 auto
			order 2
			padding 0 16px
			span
				cursor pointer
				line-height 36px
				margin 0 8px
				padding 0 4px
			.finish
				color #F50057

#bodyOpt
	margin auto
	padding 0 8px
	width 40%

#features
	position relative
	width 100px

#last
	display table
	padding 0 8px
	width 95%
	.old
		display table-row
		div
			display table-cell
			padding 5px 0
			vertical-align middle
			span
				display block
				&.subtitle
					font-size 10px
					padding-left 5px
				&.play
					background #FF4081
					color #FFFFFF
					cursor pointer
					padding 3px
					text-align center

#result
	margin-top 20px
